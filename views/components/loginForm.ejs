<div class="container">
  <h1>Log in</h1>
  <p>Do not have an account yet? <a href="./register">Register!</a></p>

  <form action="/login" method="post">
    <label for="uname">Email</label>
    <input tabindex="1" type="email" placeholder="Enter Email" name="uname" required />

    <label for="psw">Password</label>
    <div class="passwordBox" data-pswhide="true">
      <input tabindex="1" type="password" placeholder="Enter Password" name="psw" required />
      <span id="toggle"></span>
    </div>

    <div class="submitContainer">
      <button tabindex="1" class="button" type="submit">Log in</button>
    </div>
  </form>
</div>